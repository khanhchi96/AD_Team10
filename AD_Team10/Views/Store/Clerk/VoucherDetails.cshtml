@model AD_Team10.Models.AdjustmentVoucher

@{
    ViewBag.Title = "Adjustment Voucher Details";
}

<h2>Adjustment Voucher Details</h2>

<div>
    <h4>Adjustment Voucher No @Html.DisplayFor(model => model.AdjustmentVoucherID)</h4>
    <hr />
    <table>
        <tr>
            <th> Item No </th>
            <th> Item Description </th>
            <th> Quantity Adjusted </th>
            <th> Reason</th>
        </tr>
     @foreach (var item in Model.AdjustmentVoucherDetails)
     {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Item.ItemID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Item.Description)
            </td>
            <td>
                @if(item.Quantity > 0)
                {
                    <span>+</span>
                }
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td class="reason">
                @Html.DisplayFor(modelItem => item.Reason)
            </td>
        </tr>
     }
    </table>
</div>
<p>
    @Html.ActionLink("Back to List", "AdjustmentVoucher")
</p>

<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
<script>
    $('document').ready(function () {
        $(".reason").html($(".reason").text());
    })
</script>