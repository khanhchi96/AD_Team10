@model AD_Team10.ViewModels.LoginView

@{
    ViewBag.Title = "Login";
}

<style>

body { background-image: url("https://images.pexels.com/photos/373076/pexels-photo-373076.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=750&w=1260"); 
       height: 100%; 
       background-attachment: fixed; 
       background-position: center; 
       background-repeat: no-repeat; 
       background-size: cover; }
    .navbar-inverse {
        border-bottom-color: #381272 !important;
        border-bottom-width: 10px !important;
    }


    .wrapper {
        width: 50%;
        max-width: 700px;
        position: absolute;
        top: 55%;
        left: 50%;
        transform: translate(-50%, -50%);
    }

    .form-signin {
        max-width: 520px;
        height: 450px;
        padding: 15px 35px 40px;
        margin: 0 auto;
        background-color: #fff;
        border: 1px solid rgba(0,0,0,0.1);
    }

    .user_login {
        margin-top: 50px !important;
        margin-bottom: 50px !important;
    }

    input[type="submit"] {
        display: block;
        width: 100%;
        margin: auto;
        background-color: #381272;
        border: 1px solid #fff;
        cursor: pointer;
        color: white;
        font-family: century gothic;
        font-weight: 400;
        font-size: 15px;
        border-radius: 10px;
        text-align: center;
        padding: 15px !important;
    }

        input[type="submit"]:hover {
            opacity: 0.8;
        }

        input[type="submit"]:active {
            opacity: 0.6;
        }

    .back {
        position: absolute;
        left: 50%;
        transform: translateX(-50%);
        margin-top: 10px;
    }
    footer {
        background-color: #fff;
        border-top: none;
    }

    
</style>

<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="logo">
        @Html.ActionLink("LU", "Index", null, new { @class = "short-name" })
        @Html.ActionLink("Logic University", "Index", null, new { @class = "full-name" })
    </div>
    </div>

<div class="wrapper">
    @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-signin" }))
    {
        @Html.AntiForgeryToken()
        <h3 style="font-family: century gothic; text-align:center;">Stationery System - @ViewBag.UserType User Login</h3>

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group user_login">
                @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group user_login">
                @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>
            </div>
            @Html.HiddenFor(model => model.UserType, new { @Value = ViewBag.UserType })

            <input type="submit" name="submit" value="LOG IN" />
            <div class="back">
                @Html.ActionLink("Back to Home Page", "Index")
            </div>
        </div>

    }

</div>

